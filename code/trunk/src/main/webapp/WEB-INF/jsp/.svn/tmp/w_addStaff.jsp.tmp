<%@ page contentType="text/html;charset=UTF-8" language="java" %>
<%@ taglib prefix="c" uri="http://java.sun.com/jsp/jstl/core" %>
<c:set var="ctx" value="${pageContext.request.contextPath}"/>
<!doctype html>
<html class="no-js">
<jsp:include page="common/w_head.jsp"/>
<body>
<jsp:include page="common/w_header_b.jsp"/>
<!-- sidebar start -->
<!-- sidebar end -->
<br>
<!-- content start -->
<div class="admin-content">

  <div class="am-u-lg-12">
    <div class="am-u-sm-9">
      <div class="wb-panel-fc">
        <div class="am-g">

          <div class="am-u-sm-12 am-u-md-12">
            <label>添加联系人</label>
            <hr>
            <form action="${ctx}/staff/insert" id="form-staff" method="post" enctype="multipart/form-data" class="am-form am-form-horizontal">

              <input type="hidden" id="staffBindCompanyId" value="" name="companyId"/>
              <input type="hidden" id="staffBindItemId" value="${agencyItems.itemId}" name="itemId"/>
              <input type="hidden" id="staffId" value="$" name="mystaffId"/>

              <label for="name" class="am-u-sm-2 am-form-label">联系人姓名 </label>
              <div class="am-form-group am-u-sm-10">
                <input type="text" name="name" id="name" placeholder="请输入联系人姓名(必填哦)" required/>
              </div>

              <label for="staffPhone" class="am-u-sm-2 am-form-label">手机号</label>
              <div class="am-form-group am-u-sm-10">
                <input type="text" name="phone" id="staffPhone" placeholder="请输入联系人手机号(必填哦)" required/>
              </div>

              <label for="staffQQ" class="am-u-sm-2 am-form-label">QQ </label>
              <div class="am-form-group am-u-sm-10">
                <input type="text" name="qq" id="staffQQ" placeholder="请输入联系人QQ ">
              </div>

              <label for="email" class="am-u-sm-2 am-form-label">邮箱 </label>
              <div class="am-form-group am-u-sm-10">
                <input type="email" name="email" id="email" placeholder="请输入联系人邮箱 ">
              </div>

              <label for="post" class="am-u-sm-2 am-form-label">职位 </label>
              <div class="am-form-group am-u-sm-10">
                <input type="text" name="post" id="post" placeholder="请输入联系人职位 ">
              </div>

              <label for="headImgFile" class="am-u-sm-2 am-form-label">头像 </label>
              <div class="am-form-group am-u-sm-10">
                <input type="file" id="headImgFile" name="headImgFile">
                <p class="am-form-help">请选择要上传的文件...</p>
                <%--<button type="button" class="am-btn am-btn-primary am-btn-xs">保存</button>--%>
              </div>

              <label for="weixinImgFile" class="am-u-sm-2 am-form-label">微信二维码 </label>
              <div class="am-form-group am-u-sm-10">
                <input type="file" id="weixinImgFile" name="weixinImgFile" required>
                <p class="am-form-help">请选择要上传的文件...</p>
                <%--<button type="button" class="am-btn am-btn-primary am-btn-xs">保存</button>--%>
              </div>

              <div class="am-margin am-u-sm-9 am-u-sm-push-2">
                <input type="submit" class="am-btn am-btn-primary am-btn-xs" value="提交保存"/>
                <button type="button" class="am-btn am-btn-primary am-btn-xs">放弃保存</button>
              </div>
            </form>

          </div>
        </div>

      </div>
    </div>

    <jsp:include page="common/w_customer.jsp"/>
  </div>

  <div class="am-g">


  </div>

  <!-- content end -->

</div>

<br>
