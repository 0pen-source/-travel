<!--[if (gte IE 9)|!(IE)]><!-->
<script src="${ctx}/js/jquery.min.js"></script>
<!--<![endif]-->
<!--[if lte IE 8 ]>
<script src="http://libs.baidu.com/jquery/1.11.3/jquery.min.js"></script>
<script src="http://cdn.staticfile.org/modernizr/2.8.3/modernizr.js"></script>
<script src="${ctx}/js/amazeui.ie8polyfill.min.js"></script>
<![endif]-->
<script src="${ctx}/js/amazeui.min.js"></script>
<script src="${ctx}/js/app.js"></script>
<script>
  $(function () {
    $('#form-staff').validator({
      patterns: {
        staffPhone: /^1((3|5|8){1}\d{1}|70)\d{8}$/,
      },
//      H5validation: false,
      onValid: function (validity) {
        $(validity.field).closest('.am-form-group').find('.am-alert').hide();
      },

      onInValid: function (validity) {
        var $field = $(validity.field);
        var $group = $field.closest('.am-form-group');
        var $alert = $group.find('.am-alert');
        // 不使用插件内置的提示信息
        //var msg = $field.data('validationMessage') || this.getValidationMessage(validity);
        // 使用自定义的提示信息
        if ($(validity.field).attr('name') == 'name') {
          msg = '请填写联系人姓名';
        }
        if ($(validity.field).attr('name') == 'email') {
          msg = '请填写联系人邮箱';
        }
        if ($(validity.field).attr('name') == 'cost') {
          msg = '请填写联系人手机号';
        }
        if ($(validity.field).attr('name') == 'intro') {
          msg = '请填写联系人QQ号';
        }
        if ($(validity.field).attr('name') == 'weichatcode') {
          msg = '请上传联系人微信二维码';
        }

        if (!$alert.length) {
          $alert = $('<div class="am-alert am-alert-danger"></div>').hide().
          appendTo($group);
        }

        $alert.html(msg).show();
      }
    });
  });
</script>
</body>
</html>
